<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">


    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quickInfo"
            android:background="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/imgView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="인증번호"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="code"
                    android:id="@+id/prefCode"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

        </TableRow>

        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="이름"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="name"
                    android:id="@+id/prefName"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

        </TableRow>

        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="전화번호"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="phone"
                    android:id="@+id/prefPhone"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

        </TableRow>

        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="주소"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="address"
                    android:id="@+id/prefAddress"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:layout_margin="2dp"/>

        </TableRow>
    </TableLayout>

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imgView"
            android:background="@drawable/img_design"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quickInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>