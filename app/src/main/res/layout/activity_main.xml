<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutInfo">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/box"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/btnQR"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TableRow>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="ID"
                        android:textSize="20sp"
                        android:gravity="center"/>

                <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:id="@+id/editTextCode"
                        android:inputType="number"
                        android:background="@drawable/text_design"
                        android:textSize="20sp"
                        android:hint="ID"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="이름"
                        android:textSize="20sp"
                        android:gravity="center"/>

                <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:id="@+id/editTextName"
                        android:inputType="textPersonName"
                        android:background="@drawable/text_design"
                        android:textSize="20sp"
                        android:hint="이름"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="전화번호"
                        android:textSize="20sp"
                        android:gravity="center"/>

                <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:inputType="phone"
                        android:id="@+id/editTextPhone"
                        android:background="@drawable/text_design"
                        android:textSize="20sp"
                        android:hint="비밀번호"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="주소"
                        android:textSize="20sp"
                        android:gravity="center"/>

                <Spinner
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:id="@+id/spinner1"
                        android:background="@drawable/spinner_design"
                        android:spinnerMode="dialog"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <Spinner
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:id="@+id/spinner2"
                        android:background="@drawable/spinner_design"
                        android:spinnerMode="dialog" />

            </TableRow>

        </TableLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR코드 생성"
                android:padding="10dp"
                android:id="@+id/btnQR"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutQR"
            android:visibility="invisible">

        <FrameLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/frameQR"
                app:layout_constraintBottom_toTopOf="@+id/btnFlip"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:id="@+id/imgView" />

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:layout_margin="20dp"
                    android:padding="1sp"
                    android:layout_gravity="center"
                    android:id="@+id/quickInfo"
                    android:visibility="invisible">

                <TableRow>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="10dp"
                            android:text="인증번호"
                            android:textSize="20sp"
                            android:gravity="center"/>

                    <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="5dp"
                            android:text="code"
                            android:id="@+id/prefCode"
                            android:textSize="20sp"
                            android:gravity="center"/>

                </TableRow>

                <TableRow>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="10dp"
                            android:text="이름"
                            android:textSize="20sp"
                            android:gravity="center"/>

                    <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="5dp"
                            android:text="name"
                            android:id="@+id/prefName"
                            android:textSize="20sp"
                            android:gravity="center"/>

                </TableRow>

                <TableRow>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="10dp"
                            android:text="전화번호"
                            android:textSize="20sp"
                            android:gravity="center"/>

                    <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="5dp"
                            android:text="phone"
                            android:id="@+id/prefPhone"
                            android:textSize="20sp"
                            android:gravity="center"/>

                </TableRow>

                <TableRow>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="10dp"
                            android:text="주소"
                            android:textSize="20sp"
                            android:gravity="center"/>

                    <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:layout_margin="1sp"
                            android:padding="5dp"
                            android:text="address"
                            android:id="@+id/prefAddress"
                            android:textSize="20sp"
                            android:gravity="center"/>

                </TableRow>

            </TableLayout>

        </FrameLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보 수정"
                android:padding="10dp"
                android:id="@+id/btnModify"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/btnFlip"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frameQR" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력 정보 보기"
                android:padding="10dp"
                android:id="@+id/btnFlip"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frameQR" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>